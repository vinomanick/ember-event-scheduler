{{yield (hash left = (component 'event-scheduler/toolbar/wrappers/left-panel'
  selectedDate=selectedDate
  viewType=viewType
  onDateChange=(action 'updateDateAndRefresh'
  )))}}

{{yield (hash center = (component 'event-scheduler/toolbar/wrappers/center-panel'
  selectedDate=selectedDate
  viewType=viewType
  slotConfig=calendarInst.slotConfig
  dateFormat=toolbarConfig.dateFormat
  onDateChange=(action 'updateDateAndRefresh')
  ))}}

{{yield (hash right = (component 'event-scheduler/toolbar/wrappers/right-panel'
  selectedDuration=selectedDuration
  selectedView=selectedView
  durationConfig=toolbarConfig.duration
  views=calendarInst.config.views
  onDurationChange=(action 'updateDuration')
  onViewChange=(action 'updateViewAndRefresh')
  ))}}
