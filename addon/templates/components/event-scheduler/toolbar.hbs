{{yield (hash left = (component "event-scheduler/toolbar/wrappers/left-panel"
  selectedDate=selectedDate
  viewType=viewType
  showExternalEventsToggle=toolbarConfig.showExternalEventsToggle
  isExternalEventsExpanded=config.isExternalEventsExpanded
  onDateChange=(action "triggerChange" "selectedDate")
  onExternalEventsToggle=(action "updateEventsToggleState")
  ))}}

{{yield (hash center = (component "event-scheduler/toolbar/wrappers/center-panel"
  selectedDate=selectedDate
  viewType=viewType
  slotConfig=slotConfig
  dateFormat=toolbarConfig.dateFormat
  onDateChange=(action "triggerChange" "selectedDate")
  ))}}

{{yield (hash right = (component "event-scheduler/toolbar/wrappers/right-panel"
  selectedDuration=selectedDuration
  selectedView=selectedView
  durationConfig=toolbarConfig.duration
  views=config.views
  onDurationChange=(action "triggerChange" "selectedDuration")
  onViewChange=(action "triggerChange" "selectedView")
  ))}}
