{{#event-scheduler/ui-components/modal-dialog as |dialog|}}
  {{#dialog.header}}
    <h4 class="form-dialog mb-10">{{t "time_field_dialog.title"}}</h4>
  {{/dialog.header}}
  {{#dialog.body}}
    {{#power-select
        options=timeFieldChoices
        searchEnabled=false
        selected=selectedTime
        onchange=(action "changeTime")
        as |time| }}
      {{time}}
    {{/power-select}}
  {{/dialog.body}}
  {{#dialog.footer}}
    <div class="text--align-right">
      <button aria-label={{t "cancel"}} class="btn btn--secondary" data-test-id="cancel-start-time" {{action "onCancel"}}>
        {{t "cancel"}}
      </button>
      <button aria-label={{t "continue"}} class="btn btn--primary" data-test-id="update-start-time" {{action "onUpdate"}}>
        {{t "continue"}}
      </button>
    </div>
  {{/dialog.footer}}
{{/event-scheduler/ui-components/modal-dialog}}
