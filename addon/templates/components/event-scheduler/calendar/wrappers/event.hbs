{{#if canDisplayEvent}}
  {{#ember-wormhole destinationElement=resource}}
    {{#event-scheduler/calendar/wrappers/event/event-card
      event=event
      draggable=draggable
      style=eventStyle
      isExtendedLeft=isExtendedLeft
      isExtendedRight=isExtendedRight
      css-transition="event-wrapper"
    }}
      {{#if hasBlock}}
        {{yield}}
      {{else}}
        <div class="event">{{event.title}}</div>
      {{/if}}
    {{/event-scheduler/calendar/wrappers/event/event-card}}
  {{/ember-wormhole}}
{{/if}}
