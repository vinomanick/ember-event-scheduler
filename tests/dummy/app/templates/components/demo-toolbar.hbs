{{#docs-demo as |demo|}}
  {{#demo.example name='docs-demo-toolbar.hbs' class="hide-container overflow--scroll"}}
    {{#event-scheduler options=options
      selectedView=selectedView
      selectedDuration=selectedDuration
      selectedDate=selectedDate
      isExternalEventsExpanded=isExternalEventsExpanded
      onSchedulerLoad=(action "loadScheduler")
      as |scheduler|}}

      {{#scheduler.toolbar
        onViewChange=(action 'changeView')
        onDateChange=(action 'changeDate')
        onDurationChange=(action 'changeDuration')
        onExternalEventToggle = (action 'toggleExternalEvent')
        as |toolbar|}}
        {{toolbar.left}}
        {{toolbar.right}}
        {{toolbar.center}}
      {{/scheduler.toolbar}}

    {{/event-scheduler}}
  {{/demo.example}}

  {{demo.snippet 'docs-demo-toolbar.hbs'}}
  {{demo.snippet 'demo-toolbar.js' label='component.js'}}
{{/docs-demo}}
