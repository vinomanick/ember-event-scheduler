{{#event-scheduler config=config as |scheduler|}}

  {{#scheduler.calendar
    selectedView='day'
    selectedDuration=90
    selectedDate=selectedDate
    as |calendar|}}
    {{calendar.resourceHeader name='Field technicians'}}
    {{calendar.gridHeader}}

    {{#each-in resources as |key resource| }}
      {{calendar.resource resource=resource}}
    {{else}}
      {{calendar.empty message='No resources to display'}}
    {{/each-in}}

    {{#each eventsList as |event| }}
      {{calendar.event event=event}}
    {{/each}}

  {{/scheduler.calendar}}


  {{scheduler.externalEvents}}

{{/event-scheduler}}