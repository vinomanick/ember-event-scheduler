{{#event-scheduler config=config
  selectedView='week'
  selectedDuration=selectedDuration
  selectedDate=selectedDate
  onSchedulerLoad=(action 'loadScheduler')
  onEventDrop=(action 'updateEventTicket')
  as |scheduler|}}

  {{#scheduler.calendar
    as |calendar|}}
    {{calendar.resourceHeader name='Field technicians'}}
    {{calendar.gridHeader}}

    {{calendar.empty}}

  {{/scheduler.calendar}}


  {{#scheduler.externalEvents as |externalEvents|}}
    {{externalEvents.header name="Service tasks"}}

    {{externalEvents.empty}}
  {{/scheduler.externalEvents}}

{{/event-scheduler}}