{{#event-scheduler config=config
  selectedView='day'
  selectedDuration=90
  selectedDate=selectedDate
  onSchedulerLoad=(action 'loadScheduler')
  as |scheduler|}}

  {{#scheduler.calendar as |calendar|}}
    {{calendar.resourceHeader name='Field technicians'}}
    {{calendar.gridHeader}}

    {{#each-in resources as |key resource| }}
      {{calendar.resource resource=resource onEventDrop=(action 'updateEventTicket')}}
    {{else}}
      {{calendar.empty message='No resources to display'}}
    {{/each-in}}

    {{#each eventsList as |event| }}
      {{calendar.event event=event}}
    {{/each}}

  {{/scheduler.calendar}}


  {{scheduler.externalEvents}}

{{/event-scheduler}}